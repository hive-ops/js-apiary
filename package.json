{
  "name": "@hiveops/apiary",
  "version": "0.0.7",
  "description": "JS client for Apiary Cache Server",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "style-and-lint-check": "eslint -c .eslintrc.js 'src/**/*.ts' && prettier 'src/**/*.ts'  --list-different",
    "style-and-lint-fix": "eslint --fix -c .eslintrc.js 'src/**/*.ts*' && prettier 'src/**/*.ts' --write",
    "test": "ts-node src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bufbuild/protobuf": "^1.10.0",
    "@connectrpc/connect": "^1.4.0",
    "@connectrpc/connect-node": "^1.4.0",
    "@faker-js/faker": "^8.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^46.4.3",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.4.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|src.*?\\.(uspec|ispec))\\.(ts)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      [
        "text",
        {
          "skipFull": true
        }
      ],
      "clover",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.{uspec,tspec,ispec}.{ts,js}",
      "!src/tsoa/**/*.{ts,js}",
      "!src/tests/**/*.{ts,js}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 35,
        "functions": 35,
        "lines": 35,
        "statements": 35
      }
    },
    "testSequencer": "@jest/test-sequencer"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "printWidth": 120,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
